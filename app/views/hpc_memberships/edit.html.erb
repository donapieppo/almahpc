<h1>
  Modifica Ruolo <%= @slurm_association.user %> <br/>
  a <%= @slurm_association.slurm_account %>
</h1>

<%= simple_form_for [@slurm_account, @slurm_association] do |f| %>
  <div>
    <%= label_tag 'Ruolo manager: ' %> <%= check_box_tag 'manager', 'manager', @slurm_association.manager %>
  </div>
  <%= f.submit "salva" %>
<% end %>
