<h1><%= dm_icon("user") %> <%= @user.cn %></h1>

<div class="row">
  <div class="col-md-6">
    <% if @slurm_associations.any? %>
      <p class="fw-bold">The user belongs to the following HPC groups:</p>
      <div class="list-group">
        <% @user.slurm_associations.includes(:slurm_account).each do |hm| %>
          <%= link_to hm.slurm_account, class: "list-group-item list-group-item-action" do %>
            <%= dm_icon("users") %> <%= hm.slurm_account %>
          <% end %>
        <% end %>
      </div>
    <% else %>
      <p class="fw-bold">The user does not belong to any HPC group</p>
    <% end %>
  </div>
</div>

<% if @authorized_keys.any? %>
  <p class="alert alert-warning small my-3">
  No SSH Authorized Keys present.
  </p>
<% end %>
