<% if @keys.any? %>
  <% @keys.each do |ak| %>
    <div class="dm-card">
      <div class="dm-card-header">Authorized Key: <%= ak.description %></div>
      <div class="dm-card-body"><%= ak.name %></div>
      <div class="dm-card-footer text-end"><%= link_to_delete "Delete", [@user, ak] %></div>
    </div>
  <% end %>
<% else %>
  <p class="alert alert-warning small my-3">
  No SSH Authorized Keys present.
  </p>
<% end %>
<%= link_to "Add authorized_keys", new_user_authorized_key_path(@user) %>
